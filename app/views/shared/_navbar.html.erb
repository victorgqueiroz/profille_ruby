    <%= content_tag :ul do %>

      <%= content_tag :div, id: "container-bar" do %>

        <%= content_tag :li, class: "nav-item about" do %>
          <%= content_tag :h4, "ABOUT ME" %>
        <% end %>

        <%= content_tag :li, class: "nav-item carrer" do %>
          <%= content_tag :h4, "MY CARRER" %>
        <% end %>

        <%= content_tag :li, class: "nav-item projects" do %>
